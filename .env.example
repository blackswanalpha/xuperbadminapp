# ================================
# Environment Variables Template
# ================================
# Copy this file to .env.local for development
# Add these variables to Vercel project settings for production

# =============================================================================
# VERCEL ENVIRONMENT VARIABLES
# =============================================================================
# These are automatically provided by Vercel
# VERCEL=1
# VERCEL_URL=your-deployment-url.vercel.app
# VERCEL_ENV=production|preview|development

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# App Configuration
APP_NAME="Xuperb Admin Dashboard"
APP_VERSION="1.0.0"
APP_URL="https://your-app.vercel.app"

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API Base URL
NEXT_PUBLIC_API_BASE_URL="https://api.yourdomain.com"
API_BASE_URL="https://api.yourdomain.com"

# Internal API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For Vercel, use external database services like:
# - Vercel Postgres
# - PlanetScale
# - Supabase
# - Railway
# - Neon

# Database URL (use Vercel Postgres or external provider)
DATABASE_URL="postgresql://username:password@host:5432/database"
POSTGRES_URL="postgresql://username:password@host:5432/database"
POSTGRES_PRISMA_URL="postgresql://username:password@host:5432/database"
POSTGRES_URL_NON_POOLING="postgresql://username:password@host:5432/database"

# Database Configuration
DB_HOST="your-db-host"
DB_PORT="5432"
DB_NAME="xuperb_admin"
DB_USER="your-db-user"
DB_PASSWORD="your-db-password"

# =============================================================================
# CACHE & REDIS CONFIGURATION
# =============================================================================
# For Vercel, use external Redis services like:
# - Upstash Redis
# - Redis Labs
# - Railway Redis

REDIS_URL="redis://username:password@host:port"
REDIS_HOST="your-redis-host"
REDIS_PORT="6379"
REDIS_PASSWORD="your-redis-password"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Session Configuration
SESSION_SECRET="your-session-secret-key"
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="https://your-app.vercel.app"

# Encryption Keys
ENCRYPTION_KEY="your-32-character-encryption-key"
HASH_SALT_ROUNDS="12"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Service (SendGrid, Resend, etc.)
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_SERVICE_API_KEY="your-email-service-api-key"
SENDGRID_API_KEY="your-sendgrid-api-key"
RESEND_API_KEY="your-resend-api-key"

# File Upload & Storage
# For Vercel, use:
# - Vercel Blob
# - AWS S3
# - Cloudinary
# - UploadThing
UPLOAD_PROVIDER="vercel-blob"
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# AWS S3 (if using)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket"

# Cloudinary (if using)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Vercel Analytics (automatically enabled)
# VERCEL_ANALYTICS_ID is automatically set

# Sentry Error Tracking
SENTRY_DSN="your-sentry-dsn"
NEXT_PUBLIC_SENTRY_DSN="your-public-sentry-dsn"

# LogRocket (if using)
NEXT_PUBLIC_LOGROCKET_APP_ID="your-logrocket-app-id"

# =============================================================================
# PAYMENT & BILLING (if applicable)
# =============================================================================
# Stripe
STRIPE_SECRET_KEY="sk_test_or_live_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_or_live_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# =============================================================================
# FEATURE FLAGS & CONFIGURATION
# =============================================================================
# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_ERROR_TRACKING="true"
NEXT_PUBLIC_ENABLE_FEATURE_X="false"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# =============================================================================
# DEVELOPMENT & DEBUG
# =============================================================================
# Debug Configuration
DEBUG_MODE="false"
LOG_LEVEL="info"
NEXT_PUBLIC_DEBUG="false"

# Development URLs
DEV_API_URL="http://localhost:8000"
DEV_DATABASE_URL="postgresql://localhost:5432/xuperb_admin_dev"

# =============================================================================
# WEBHOOKS & INTEGRATIONS
# =============================================================================
# Webhook URLs
WEBHOOK_SECRET="your-webhook-secret"
GITHUB_WEBHOOK_SECRET="your-github-webhook-secret"

# External API Keys
EXTERNAL_API_KEY="your-external-api-key"
THIRD_PARTY_SERVICE_KEY="your-service-key"

# =============================================================================
# VERCEL SPECIFIC SETTINGS
# =============================================================================
# Build Configuration
BUILD_COMMAND="npm run build"
OUTPUT_DIRECTORY=".next"
INSTALL_COMMAND="npm ci"

# Serverless Function Configuration
FUNCTION_REGION="iad1"
FUNCTION_MEMORY="1024"
FUNCTION_TIMEOUT="30"

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# Content Security Policy
NEXT_PUBLIC_CSP_NONCE="your-csp-nonce"

# CORS Configuration
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_FREQUENCY="daily"
BACKUP_RETENTION_DAYS="30"

# Maintenance Mode
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="We'll be back soon!"